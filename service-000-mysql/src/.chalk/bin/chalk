#!/bin/sh

# shellcheck disable=SC2240
# shellcheck disable=SC1090

# set -x
# set -euo pipefail

. ~/.profile

if [ -z "$CHALK_STATUS" ]; then
    PROFILE_FILE=$HOME/.profile
    LIB_RESOURCES="LIB_PATH=/usr/src/mysql/src/.chalk/lib
        . \$LIB_PATH/env.sh
        . \$LIB_PATH/utils.sh
        . \$LIB_PATH/prompt.sh
        "

    printf "%s" "$LIB_RESOURCES" >>"$PROFILE_FILE"
    sleep 3

    chalk init
    exec sh
fi

if [ -z "$1" ] || [ "$1" = "help" ] || [ "$1" = "Help" ]; then
    [ "$#" -ne 0 ] && shift
    . "$LIB_PATH"/help.sh "$@"
    return 1
else

    # handle chalk initialisation
    if [ "$1" = "init" ]; then
        chalk Help
        return 1
    fi

    # handle prompt commands
    if [ "$1" = "prompt" ] || [ "$1" = "prompts" ]; then
        [ "$#" -ne 0 ] && shift
        . "$LIB_PATH"/prompt.sh "$@"
        return 1
    fi

    # handle error commands
    if [ "$1" = "error" ] || [ "$1" = "errors" ]; then
        [ "$#" -ne 0 ] && shift
        . "$LIB_PATH"/error.sh "$@"
        return 1
    fi

    # catch all errors
    . "$LIB_PATH"/error.sh 101
    return 1
fi
